#ifndef _LOCASModel_
#define _LOCASModel_

namespace LOCAS{

  class LOCASModel : public TObject
  {
  public:
    virtual LOCASModel(){ };
    virtual ~LOCASModel(){ };

    /////////////////////////////////
    ////////     METHODS     ////////
    /////////////////////////////////

    virtual void InitialiseParameters();
    virtual void AllocateParameters();
    virtual Float_t ModelPrediction( LOCASDataPoint& dataPoint );
